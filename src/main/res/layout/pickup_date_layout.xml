<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/primaryColor"
            android:layout_weight="0.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_pickup_desired_date"
            android:textColor="@color/primaryLightColor"
            android:textSize="14sp"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_margin="10dp"
            android:background="@color/primaryColor"
            android:layout_weight="2.5"/>

    </LinearLayout>

    <!--    Deviant check box   -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            style="@style/verticalDivider"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/st_deviation"
            android:textColor="@color/bpblack"
            android:textSize="16sp"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/pickup_deviation_checkbox"
            style="@style/customCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleX="1.1"
            android:scaleY="1.1"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pick_date_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="gone">

        <View
            style="@style/verticalDivider"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/pickup_date_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24.08.2019"
            android:textColor="@color/bpblack"
            android:layout_marginStart="20dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/pickup_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_date_picker"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:tint="@color/primaryColor"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/ST_todo" />
    </RelativeLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pickup_adress_layout"
        style="@style/customTextInputLayout"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:visibility="gone"
        app:helperText="@string/st_adress_hint"
        app:helperTextEnabled="true"
        android:layout_height="0dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pickup_adress_inputtext"
            style="@style/customEditText"
            android:hint="@string/st_pickup_address" />
    </com.google.android.material.textfield.TextInputLayout>





</LinearLayout>