<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/secondaryColor"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    tools:ignore="Overdraw">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:src="@mipmap/ic_launcher_round"
        android:contentDescription="@string/ST_todo" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@string/st_customer_no"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/bpblack"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/customer_number_side_menu_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="10005"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/bpblack"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/email_text_side_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="jan.hendrik.telke@heuremo.io"
        android:textColor="@color/bpblack"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />


</LinearLayout>