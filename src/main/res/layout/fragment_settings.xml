<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- E-Mail Text Input Field-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/E_mail_layout"
            style="@style/customTextInputLayout"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/E_mail"
                style="@style/customEditText"
                android:hint="@string/st_email"
                android:textIsSelectable="true"
                android:focusable="false"
                android:enabled="false"
                android:text="example@email.com"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Mobile Number Text Input Field-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/Mobile_Number_layout"
            style="@style/customTextInputLayout"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Mobile_Number"
                style="@style/customEditText"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:textIsSelectable="true"
                android:focusable="false"
                android:enabled="false"
                android:text="+41 123 5678 123"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Change Password Button-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/change_password_button"
                style="@style/customButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/st_Change_Password"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <!-- Email Notification Toggle Button layout-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="3">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/primaryColor"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_notifications"
                android:textColor="@color/primaryLightColor"
                android:textSize="14sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/primaryColor"
                android:layout_weight="2.5"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">
            <View
                style="@style/verticalDivider"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/st_Email_notifications"
                android:textColor="@color/bpblack"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/email_notification_toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:theme="@style/SwitchCompatTheme" />

        </RelativeLayout>

        <!-- SMS Notification Toggle Button layout-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                style="@style/verticalDivider"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/st_SMS_notifications"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:textColor="@color/bpblack"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/sms_notification_toggle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:layout_centerVertical="true"
                android:theme="@style/SwitchCompatTheme" />

        </RelativeLayout>

        <!-- Conditions checkbox layout-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="3">

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/primaryColor"
                android:layout_weight="0.5"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_legal_privacy"
                android:textColor="@color/primaryLightColor"
                android:textSize="14sp"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_margin="10dp"
                android:background="@color/primaryColor"
                android:layout_weight="2.5"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <View
                style="@style/verticalDivider"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="@string/st_Data_Protection"
                android:textColor="@color/bpblack"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/data_protection"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_info_fill"
                android:tint="@color/primaryColor"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/ST_todo" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
            <View
                style="@style/verticalDivider"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="@string/st_conditions_settings"
                android:textColor="@color/bpblack"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
                tools:ignore="RelativeOverlap" />

            <ImageView
                android:id="@+id/conditions"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_info_fill"
                android:tint="@color/primaryColor"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                tools:ignore="ContentDescription"
                android:contentDescription="@string/St_todo" />



        </RelativeLayout>

        <!-- Log Out Button-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/logout_button"
            style="@style/customButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/bpWhite"
            android:text="@string/st_Logout" />

    </LinearLayout>
</ScrollView>
