<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryColor"
    android:orientation="vertical"
    tools:ignore="Overdraw">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="15dp"
        android:paddingTop="14dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.25">

            <TextView
                android:id="@+id/textView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/text_view_cricle_activated"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/_1"
                android:textColor="@color/bpWhite"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_REGISTRATION"
                android:textColor="@color/bpWhite"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@color/bpWhite"
            android:layout_marginTop="3dp"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            android:gravity="end"
            tools:ignore="RtlHardcoded">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/text_view_circle_deactivated"
                android:gravity="center"
                android:padding="4dp"
                android:text="@string/_2"
                android:textColor="@color/bpWhite"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/st_YOUR_DATA"
                android:textColor="@color/bpWhite"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/background"
        app:shapeAppearance="@style/card1"
        app:cardPreventCornerOverlap="false">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                    <!--Logo-->
                <ImageView
                    android:id="@+id/log_image"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/heuremo_logo"
                    android:contentDescription="@string/ST_todo" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customTextInputLayout"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/invitation_key"
                        style="@style/customEditText"
                        android:enabled="false"
                        android:focusable="false"
                        android:hint="@string/st_Invitation_key"
                        android:textIsSelectable="true" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/customTextInputLayout"
                    android:layout_marginTop="20dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/customer_number"
                        style="@style/customEditText"
                        android:hint="@string/st_Customer_Number"
                        android:textIsSelectable="true"
                        android:focusable="false"
                        android:enabled="false"/>
                </com.google.android.material.textfield.TextInputLayout>


                <!-- Divider -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    android:weightSum="3">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/primaryColor"
                        android:layout_weight="0.5"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/st_legal_privacy"
                        android:textColor="@color/primaryLightColor"
                        android:textSize="14sp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="2dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/primaryColor"
                        android:layout_weight="2.5"/>

                </LinearLayout>

               <!--    Data protection check box   -->
                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <View
                        style="@style/verticalDivider"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"/>
                    <TextView
                        android:id="@+id/data_protection_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/st_data_protection"
                        android:textColor="@color/secondaryDarkColor"
                        android:textSize="18sp"
                       android:layout_marginStart="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        tools:ignore="RelativeOverlap" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        style="@style/customCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/data-protection-checkbox"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleX="1.1"
                        android:scaleY="1.1"/>

                </RelativeLayout>

                <!--    Conditions check box   -->
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        style="@style/verticalDivider"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"/>

                    <TextView
                        android:id="@+id/conditions-checkbox_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/st_conditions"
                        android:textColor="@color/secondaryDarkColor"
                        android:textSize="18sp"
                        android:layout_marginStart="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        tools:ignore="RelativeOverlap" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        style="@style/customCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/conditions_checkbox"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:scaleX="1.1"
                        android:scaleY="1.1"/>

                </RelativeLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/continue_button"
                    style="@style/customButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/st_Continue" />

            </LinearLayout>

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>


</LinearLayout>